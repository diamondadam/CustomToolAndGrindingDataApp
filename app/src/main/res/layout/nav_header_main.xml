<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    android:layout_margin="10dp"
    android:gravity="bottom"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view_nav_header"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="10dp"
        android:contentDescription="Custom Tool Emblem"
        app:srcCompat="@drawable/custom_tool_header" />

    <TextView
        android:id="@+id/clock_in_and_out_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColorHighlight="@color/CustomToolBlack"
        android:textColorHint="@color/CustomToolBlack"
        android:textColorLink="@color/CustomToolBlack"
        android:translationZ="90dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"
        android:padding="5dp" />

</LinearLayout>